generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid(2))
  username String @unique

  display_name String
  avatar_url   String

  pronouns    String
  description String
  birthday    DateTime

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
