generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id String @id @default(cuid(2))

  username    String @unique
  displayName String

  avatarUrl String
  bannerUrl String

  birthday  DateTime
  pronouns  String
  location  String
  interests String[]
  bio       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
