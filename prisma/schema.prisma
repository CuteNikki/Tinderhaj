generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id String @id @default(cuid(2))

  username String @unique
  email    String @unique
  password String
  salt     String

  displayName String

  avatarUrl String
  bannerUrl String

  birthday  DateTime
  size      Float
  pronouns  String
  location  String
  interests String[]
  bio       String

  canVerify  Boolean? @default(false)
  isVerified Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Session Session[]
}

model Session {
  sessionId String   @id
  profileId String
  Profile   Profile? @relation(fields: [profileId], references: [id])
}
